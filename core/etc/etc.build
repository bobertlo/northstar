#!/bin/sh -e

PRGNAME=etc
VERSION=${VERSION:-0.1}
BUILD=${BUILD:-1}

if [ -z "$ARCH" ]; then
  case "$( uname -m )" in
    i?86) ARCH=i386 ;;
       *) ARCH=$( uname -m) ;;
  esac
fi

CWD=$(pwd)
NS_DIST=${NS_DIST:-$CWD}
TMP=${TMP:-/tmp}
NS_PKGDIR=${NS_PKGDIR:-$TMP}
PKG=$NS_PKGDIR/package-$PRGNAME

rm -rf $PKG
mkdir -p $PKG

cd $PKG

mkdir etc
cp $CWD/etc/* etc
chown -R 0:0 etc
chmod go-r etc/shadow

tar jvcf $NS_PKGDIR/$PRGNAME-$VERSION-$ARCH-$BUILD.tbz *
