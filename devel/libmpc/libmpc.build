#!/bin/sh -e

PRGNAME=libmpc
VERSION=${VERSION:-0.9}
BUILD=${BUILD:-1}

if [ -z "$ARCH" ]; then
  case "$( uname -m )" in
    i?86) ARCH=i386 ;;
       *) ARCH=$( uname -m) ;;
  esac
fi

CWD=$(pwd)
NS_DIST=${NS_DIST:-$CWD}
NS_BUILD=${NS_BUILD:-/tmp}
PKG=$NS_BUILD/package-$PRGNAME
NS_PKGDIR=${NS_PKGDIR:-$NS_BUILD}

rm -rf $PKG
mkdir -p $NS_BUILD $PKG $NS_PKGDIR
cd $NS_BUILD
rm -rf mpc-$VERSION
tar xvf $NS_DIST/mpc-$VERSION.tar.gz
cd mpc-$VERSION

./configure --prefix=/devel --disable-shared
make -j$MAKE_THREADS
make DESTDIR=$PKG install
rm $PKG/devel/lib/libmpc.la

cd $PKG
tar jvcf $NS_PKGDIR/$PRGNAME-$VERSION-$ARCH-$BUILD.tbz *
