export ARCH=i386
#export ARCH=x86_64
export BS=/tmp/bootstrap
export MAKE_THREADS=1
export PATH=$BS/bin:$PATH

# root directory for chroot
export NS_ROOT="/tmp/northstar/root"

# package dist file directory (default: package source directory)
export DIST_DIR="/tmp/northstar/dist"

# package build direcotry (default: /tmp)
export TMP="/tmp/northstar/pkgbuild"

# package output directory (default: $TMP)
export OUTPUT="/tmp/northstar/packages"
