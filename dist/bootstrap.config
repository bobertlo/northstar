# architecture
export ARCH=i386
#export ARCH=x86_64

# parallel
export MAKE_THREADS=1
#export NJOBS=1

export NS_SRC=$( pwd )
export PATH=$NS_SRC/utils:$PATH

# bootstrap
export BS=/tmp/bootstrap
export PATH=$BS/bin:$PATH

# northstar build directory structure
export NS_BUILD_ROOT="/tmp/northstar"
export NS_ROOT="$NS_BUILD_ROOT/root"
export NS_DIST="$NS_BUILD_ROOT/dist"
export NS_BUILD="$NS_BUILD_ROOT/pkgbuild"
export NS_PKGDIR="$NS_BUILD_ROOT/packages"
export NS_PKGLOG="$BS/var/log/packages"
