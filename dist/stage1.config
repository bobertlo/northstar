export ARCH=i386
#export ARCH=x86_64
export BS=/tmp/bootstrap
export MAKE_THREADS=1

export NS_BUILD_ROOT="/tmp/northstar"

# package dist file directory (default: package source directory)
export DIST_DIR="$NS_BUILD_ROOT/dist"

# package build direcotry (default: /tmp)
export TMP="$NS_BUILD_ROOT/pkgbuild"

# package output directory (default: $TMP)
export OUTPUT="$NS_BUILD_ROOT/packages"

export PKGLOGDIR=/var/log/packages

export CC="musl-gcc"
export HOSTCC="musl-gcc"
